{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="w-50 mx-auto my-5">
        <h1>Create new account</h1>

        <form method="post">
            {{ form_start(registrationForm) }}

            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}

                <small class="text-danger">
                    {{ form_errors(registrationForm.email) }}
                </small>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.password.first, 'Password') }}
                {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}

                <small class="text-danger">
                    {{ form_errors(registrationForm.password.first) }}
                </small>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.password.second, 'Confirm') }}
                {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}

                <small class="text-danger">
                    {{ form_errors(registrationForm.password.second) }}
                </small>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.firstName, 'First Name') }}
                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}

                <small class="text-danger">
                    {{ form_errors(registrationForm.firstName) }}
                </small>
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.phone, 'Phone') }}
                {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}

                <small class="text-danger">
                    {{ form_errors(registrationForm.phone) }}
                </small>
            </div>

            <div class="form-check">
                {{ form_widget(registrationForm.agreeTerms,  {'attr' : {'class' : 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'Agree terms', {'attr' : {'class' : 'form-check-label'}}) }}

                <small class="text-danger">
                    {{ form_errors(registrationForm.agreeTerms) }}
                </small>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
            {{ form_end(registrationForm) }}
        </form>
    </div>
{% endblock %}
